using UnityEngine;

public class InventoryOpenState : PlayerState
{
    private GameObject inventoryUI;

    public InventoryOpenState(Player player, GameObject inventoryUI) : base(player)
    {
        this.inventoryUI = inventoryUI;
    }

    public override void Enter()
    {
        inventoryUI.SetActive(true);
        Debug.Log("Inventory opened");
    }

    public override void Exit()
    {
        inventoryUI.SetActive(false);
        Debug.Log("Inventory closed");
    }

    public override void HandleInput()
    {
        // Close inventory if Tab is pressed
        if (Input.GetKeyDown(KeyCode.Tab))
        {
            player.stateMachine.ChangeState(player.idleState);
        }
    }

    public override void Update()
    {
        // Optional: could allow scrolling inventory, using items, etc.
    }
}
